{
    "modules-left": ["ext/workspaces", "custom/media", "custom/dnd"],
    "modules-center": ["clock"],
    "modules-right": [
        "tray",
        "cpu",
        "memory",
        "network",
        "bluetooth",
        "pulseaudio",
        "battery"
    ],

    "ext/workspaces": {
        "disable-scroll": true,
        "ignore-hidden": false,
        "all-outputs": false,
        "active-only": false,
        "warp-on-scroll": false,
        "format": "{icon}",
        "cursor": true,
        "sort-by-id": true
    },

    "dwl/window": {
    	"format": "{}",
     	"max-length": 50,
     	"icon": false,
    	"tooltip": false
},

    "tray": {
        "icon-size": 20,
        "spacing": 8,
        "cursor": true
    },

    "bluetooth": {
        "format": "Û∞ÇØ",
        "format-disabled": "",
        "format-connected": "Û∞Ç±",
        "on-click": "blueman-manager"
    },

    "network": {
        "interval": 2,
        "format-wifi": "Ôá´",
        "format-ethernet": "Óºâ ",
        "format-linked": "ÔÅû",
        "format-disconnected": "ÔÅ±",
        "tooltip": true,
        "tooltip-format-wifi": "SSID: {essid}\nSinal: {signalStrength}%\nIP: {ipaddr}\n‚¨á Download: {bandwidthDownBytes}\n‚¨Ü Upload: {bandwidthUpBytes}",
        "tooltip-format-ethernet": "Ethernet\nIP: {ipaddr}\n‚¨á Download: {bandwidthDownBytes}\n‚¨Ü Upload: {bandwidthUpBytes}",
        "tooltip-format-linked": "Ligado (sem IP)",
        "tooltip-format-disconnected": "Sem conex√£o",
        "on-click": "networkmanager_dmenu"
    },

    "battery": {
        "states": {
            "good": 85,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-plugged": "ÔÉß {capacity}%",
        "format-charging": "ÔÉß {capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
	"tooltip-format": "{time}", 
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Ôë¶ {volume}%",
        "format-bluetooth": "Ôäî {volume}%",
        "format-bluetooth-muted": "Ôë¶ {volume}%",
        "format-icons": {
            "headphone": "ÔÄ•",
            "headset": "ÔÄ•",
            "default": ["ÔÄ®"]
        },
        "on-click": "foot -e wiremix"
    },
    
    "cpu": {
    	"format": "CPU: {usage}%",
	"interval": 2,
    	"tooltip": false
    },

    "memory": {
        "interval": 5,
        "format": "Mem: {used}GiB",
        "tooltip-format": "Dispon√≠vel: {avail}GiB\nTotal: {total}GiB\nSwap: {swapUsed}GiB / {swapTotal}GiB"
    },

        "clock": {
        "format": "{:%a %d/%m/%Y ~ %H:%M:%S}",
        "interval": 2,
        "tooltip-format": "<span size='15000'><tt>{calendar}</tt></span>",
        "calendar": {
            "mode": "month",
            "format": {
                "months": "<span color='#b97a94'><b>{}</b></span>",
                "weekdays": "<span color='#7489b0'><b>{}</b></span>",
                "days": "<span color='#CDD6F4'><b>{}</b></span>",
                "today": "<span color='#b8b06a'><b>{}</b></span>"
            }
        }
    },

    "custom/media": {
        "exec": "status=$(playerctl status 2>/dev/null); meta=$(playerctl metadata --format '{{ artist }} - {{ title }}' 2>/dev/null); [ -z \"$meta\" ] && exit; case \"$status\" in Playing) icon='‚è∏' ;; Paused) icon='‚ñ∂' ;; *) exit ;; esac; echo \"$icon $meta\"",
        "interval": 2,
        "return-type": "text",
        "max-length": 20,
    },

    "custom/dnd": {
    	"exec": "if [ \"$(dunstctl is-paused)\" = true ]; then echo 'üîï'; else echo ''; fi",
    	"interval": 2,
    	"return-type": "markup",
    	"tooltip": "DND ativo"
}

}

